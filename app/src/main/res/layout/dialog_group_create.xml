<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/createGroup"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="그룹 생성"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/roomNameArea"
        app:layout_constraintTop_toBottomOf="@id/createGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="@style/EditTextStyle"
        android:theme="@style/EditTextStyle"
        android:background="@color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/roomNameEdit"
            android:layout_width="match_parent"
            android:textColorHint="#4e4e4e"
            android:layout_height="wrap_content"
            android:hint="방 제목" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/groupCreateBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        app:layout_constraintTop_toBottomOf="@id/roomNameArea"
        android:text="생성하기"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/groupCancelBtn"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/groupCreateBtn"
        android:text="취소"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>







</androidx.constraintlayout.widget.ConstraintLayout>