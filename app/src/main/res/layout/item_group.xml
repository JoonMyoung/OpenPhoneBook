<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:padding="8dp"
        android:textColor="@color/black"
        android:id="@+id/groupTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="그룹이름"
        android:textSize="20dp"
        android:layout_margin="10dp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/black"
        android:padding="8dp"
        android:id="@+id/groupMemberCountTextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/groupTitleTextView"
        android:layout_margin="8dp"
        android:text="0명"

        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/GroupCreatorImage"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_local_police_24"
        android:visibility="gone"
        tool:visibility = "visible"
        android:layout_width="30dp"
        android:layout_height="30dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>